{% from 'components/header/macro.njk' import header %}
{% from 'components/skip-link/macro.njk' import skipLink %}

{% extends 'layout.njk' %}

{% block header %}
  {{ skipLink({
    "URL": "#maincontent",
    "heading": "Skip to main content"
  }) }}

  {{ header({
    "transactionalService": {
    "name": "NHS login",
    "href": "https://beta.nhs.uk/book-a-gp-appointment/"
    },
    "showNav": "false",
    "showSearch": "false",
    "homeHref": "https://www.nhs.uk",
    "primaryLinks": [
      
      {
        'url'  : 'https://www.nhs.uk/conditions/social-care-and-support/',
        'label' : 'Get Started'
      },
      {
        'url'  : 'https://www.nhs.uk/news/',
        'label' : 'Documentation'
      },
      {
        'url' : 'https://www.nhs.uk/service-search',
        'label' : 'Support'
      }
    ]
    })
    
    
  }}
{% endblock %}


{% block body %}

  {% block breadcrumb %}{% endblock %}

  <div class="nhsuk-width-container">
    <main class="nhsuk-main-wrapper" id="maincontent">

      <div class="nhsuk-grid-row">
        <div class="nhsuk-grid-column-two-thirds">
          {% block heading %}{% endblock %}
        </div>
      </div>

      <div class="nhsuk-grid-row">
        <div class="nhsuk-grid-column-one-third sidebar-navigation sidebar-navigation--sticky">
          {% block sidebar %}{% endblock %}
        </div>

        <div class="nhsuk-grid-column-two-thirds ">
          {% block content %}{% endblock %}
        </div>
      </div>

    </main>
  </div>

{% endblock %}

{% block footer %}

  {{ footer({
    "links": [
      {
        "URL": "/pages/connecting/connecting.html",
        "label": "Get Started"
      },
      {
        "URL": "/pages/documentation/service-description.html",
        "label": "Documentation"
      },
      {
        "URL": "",
        "label": "Support"
      }
    ]
  })}}

{% endblock %}
